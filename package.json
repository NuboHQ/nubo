{
  "name": "nubo",
  "version": "0.0.7-alpha",
  "description": "Nubo Client",
  "author": "Marcel Thomas",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "dev": "tsup src/index.ts src/nubo.ts --format cjs,esm --dts --watch",
    "clean": "rimraf dist",
    "build": "npm-run-all clean build:main build:bin",
    "build:main": "tsup src/index.ts --format cjs,esm --dts",
    "build:bin": "tsup src/nubo.ts --format cjs,esm --dts",
    "lint": "tsc"
  },
  "bin": {
    "nubo": "./bin/nubo"
  },
  "dependencies": {
    "@planetscale/database": "^1.7.0",
    "colors": "^1.4.0",
    "dotenv": "^16.0.3",
    "node-fetch": "^3.3.1"
  },
  "devDependencies": {
    "@types/colors": "^1.2.1",
    "@types/node": "^18.15.11",
    "npm-run-all": "^4.1.5",
    "rimraf": "^4.4.1",
    "tsup": "^6.7.0",
    "tsx": "^3.12.6",
    "typescript": "^5.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NuboHQ/nubo.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/NuboHQ/nubo/issues"
  },
  "homepage": "https://github.com/NuboHQ/nubo#readme"
}
