{
  "name": "nubo",
  "version": "0.0.0-alpha",
  "description": "",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "build": "npm-run-all clean build:client",
    "build:prod": "npm-run-all clean build:client:prod",
    "build:client": "esbuild src/client/index.tsx --bundle --jsx=automatic --sourcemap --outfile=.nubo/app.js",
    "build:client:prod": "esbuild src/client/index.tsx --bundle --jsx=automatic --minify --outfile=.nubo/app.js",
    "dev": "clear && bun --hot src/main.tsx",
    "clean": "rimraf .nubo"
  },
  "dependencies": {
    "baojs": "^0.2.1",
    "bun-types": "^0.2.2",
    "hono": "^2.5.4",
    "htm": "^3.1.1",
    "preact": "^10.11.3",
    "preact-render-to-string": "^5.2.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.3"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "esbuild": "^0.15.15",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
